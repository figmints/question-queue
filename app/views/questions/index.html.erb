<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Questions</title>
  </head>
  <body>

    <%= form_tag questions_path, method: :get do %>
        <p>
            <%= text_field_tag :query, params[:query] %>
            <%= submit_tag "Search", name: nil %>
        </p>
    <% end %>

    <!-- <%= link_to 'filtered_department', {controller: 'questions', action: 'index', :department => 'the_department'} %> -->
    <% @questions.each do |p| %>
      <div class="title">
        <a href="<%= question_path(p) %>">Question: <%= p.title %></a>
      </div>
      <div class="description">
        Description: <%= p.description %>
      </div>
      <div class="department">
        Department: <%= p.department.name %>
      </div>
      <br>
    <% end %>

  <%= will_paginate @questions %>
  </body>
</html>
